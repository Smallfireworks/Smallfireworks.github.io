        const noDataMessage = !hasGpa &amp;&amp; !hasComments ? &#39;&lt;p class=&#34;no-data-message&#34;&gt;æš‚æ— è¯¾ç¨‹GPAæˆ–å­¦ç”Ÿè¯„ä»·æ•°æ®&lt;/p&gt;&#39; : &#39;&#39;;
        
        card.innerHTML = `
